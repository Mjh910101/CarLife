<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/carDamaged_damaged31"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/damaged_3_1_image">

        <ImageView
            android:id="@+id/carDamaged_damagedImageForF"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/carDamaged_damagedTextForF"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="F"
            android:textColor="@color/text_gary_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/carDamaged_damagedSizeForF"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/damaged_size_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carDamaged_damaged32"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/damaged_3_2_image">

        <ImageView
            android:id="@+id/carDamaged_damagedImageForL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/carDamaged_damagedTextForL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="L"
            android:textColor="@color/text_gary_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/carDamaged_damagedSizeForL"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/damaged_size_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carDamaged_damaged33"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/damaged_3_3_image">

        <ImageView
            android:id="@+id/carDamaged_damagedImageForG"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/carDamaged_damagedTextForG"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="G"
            android:textColor="@color/text_gary_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/carDamaged_damagedSizeForG"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/damaged_size_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_9" />

    </RelativeLayout>


</LinearLayout>