<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/line_gary" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/serverShopComment_start01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comment_start_icon" />

                <ImageView
                    android:id="@+id/serverShopComment_start02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/comment_start_icon" />

                <ImageView
                    android:id="@+id/serverShopComment_start03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comment_start_icon" />

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gary" />

            <EditText
                android:id="@+id/serverShopComment_contentInput"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@color/text_white"
                android:gravity="top"
                android:textSize="@dimen/text_size_17"
                android:textColorHint="@color/text_gary_07"
                android:hint="请输入10到200字的评论!"
                android:padding="8dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gary" />

            <TextView
                android:id="@+id/serverShopComment_uploadBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/title_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="提交评论"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_20" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/serverShopComment_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>