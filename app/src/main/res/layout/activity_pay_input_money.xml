<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:padding="8dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="账号余额"
                    android:textColor="@color/text_gary_05"
                    android:textSize="@dimen/text_size_13" />


                <TextView
                    android:id="@+id/payInput_balanceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="￥500.00"
                    android:textColor="@color/text_gary_05"
                    android:textSize="@dimen/text_size_20" />


            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"
                android:background="@color/line_gary" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/line_gary" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消费项目"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_17" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/payInput_remarkText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="5dp"
                            android:gravity="left"
                            android:textColor="@color/text_gary_02"
                            android:textSize="@dimen/text_size_17" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gary" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/input_stype_gary"
                    android:inputType="number"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/payInput_inputText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="消费总额"
                        android:textSize="@dimen/text_size_17" />

                    <EditText
                        android:id="@+id/payInput_moneyInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_toRightOf="@id/payInput_inputText"
                        android:background="@drawable/input_stype_lucency"
                        android:gravity="right|center_vertical"
                        android:hint="手动输入金额"
                        android:inputType="numberDecimal"
                        android:textColor="@color/text_orange" />

                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gary" />

                <LinearLayout
                    android:id="@+id/payInput_chooseBox"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/payInput_50Btn"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/red_box"
                                android:gravity="center"
                                android:text="50元"
                                android:textColor="@color/text_red"
                                android:textSize="@dimen/text_size_17" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/payInput_100Btn"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gray_box"
                                android:gravity="center"
                                android:text="100元"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_size_17" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/payInput_300Btn"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gray_box"
                                android:gravity="center"
                                android:text="300元"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_size_17" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/payInput_500Btn"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gray_box"
                                android:gravity="center"
                                android:text="500元"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_size_17" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/payInput_1000Btn"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gray_box"
                                android:gravity="center"
                                android:text="1000元"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_size_17" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/payInput_3000Btn"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gray_box"
                                android:gravity="center"
                                android:text="3000元"
                                android:textColor="@color/text_black"
                                android:textSize="@dimen/text_size_17" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_gary" />
            </LinearLayout>


            <TextView
                android:id="@+id/payInput_confirm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@color/yellaw"
                android:gravity="center"
                android:padding="10dp"
                android:text="确定支付"
                android:textColor="@color/text_white"
                android:textSize="@dimen/text_size_17" />


        </LinearLayout>

        <ProgressBar
            android:id="@+id/payInput_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>