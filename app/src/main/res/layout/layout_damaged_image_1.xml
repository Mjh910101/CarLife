<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/carDamaged_damaged11"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/damaged_1_1_image">

        <ImageView
            android:id="@+id/carDamaged_damagedImageForA"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/carDamaged_damagedTextForA"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/text_gary_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/carDamaged_damagedSizeForA"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/damaged_size_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carDamaged_damaged12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/damaged_1_2_image">

        <ImageView
            android:id="@+id/carDamaged_damagedImageForB"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/carDamaged_damagedTextForB"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="B"
            android:textColor="@color/text_gary_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/carDamaged_damagedSizeForB"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/damaged_size_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carDamaged_damaged13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/damaged_1_3_image">

        <ImageView
            android:id="@+id/carDamaged_damagedImageForC"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/carDamaged_damagedTextForC"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/text_gary_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/carDamaged_damagedSizeForC"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/damaged_size_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_9" />

    </RelativeLayout>


</LinearLayout>