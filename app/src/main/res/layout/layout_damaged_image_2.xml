<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/carDamaged_damaged21"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/damaged_2_1_image">

        <ImageView
            android:id="@+id/carDamaged_damagedImageForD"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/carDamaged_damagedTextForD"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="D"
            android:textColor="@color/text_gary_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/carDamaged_damagedSizeForD"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/damaged_size_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carDamaged_damaged22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/damaged_2_2_image" >

        <ImageView
            android:id="@+id/carDamaged_damagedImageForK"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/carDamaged_damagedTextForK"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="K"
            android:textColor="@color/text_gary_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/carDamaged_damagedSizeForK"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/damaged_size_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carDamaged_damaged23"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/damaged_2_3_image">

        <ImageView
            android:id="@+id/carDamaged_damagedImageForE"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="center" />

        <TextView
            android:id="@+id/carDamaged_damagedTextForE"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="E"
            android:textColor="@color/text_gary_02"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/carDamaged_damagedSizeForE"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/damaged_size_bg"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size_9" />

    </RelativeLayout>


</LinearLayout>