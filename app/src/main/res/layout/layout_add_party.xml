<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/text_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="活动名称"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_17" />

            <EditText
                android:id="@+id/addParty_titleInput"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_stype_lucency"
                android:hint="最多45个字符"
                android:maxLength="45"
                android:textColor="@color/text_gary_04"
                android:textColorHint="@color/text_gary_04" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gary" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="活动类型"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_17" />

            <TextView
                android:id="@+id/addParty_typeInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/bule_choose_down_icon"
                android:gravity="center_vertical"
                android:text="        "
                android:textSize="@dimen/text_size_17" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gary" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="开始时间"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_17" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1">


                <TextView
                    android:id="@+id/addParty_startDayInput"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/bule_choose_down_icon"
                    android:gravity="center_vertical"
                    android:text="        "
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/addParty_startTimeInput"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/bule_choose_down_icon"
                    android:gravity="center_vertical"
                    android:text="        "
                    android:textSize="@dimen/text_size_17" />

            </GridLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gary" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="结束时间"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_17" />

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1">


                <TextView
                    android:id="@+id/addParty_endDayInput"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/bule_choose_down_icon"
                    android:gravity="center_vertical"
                    android:text="        "
                    android:textSize="@dimen/text_size_17" />

                <TextView
                    android:id="@+id/addParty_endTimeInput"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/bule_choose_down_icon"
                    android:gravity="center_vertical"
                    android:text="        "
                    android:textSize="@dimen/text_size_17" />

            </GridLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gary" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="活动地点"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_17" />

            <EditText
                android:id="@+id/addParty_addressInput"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_stype_lucency"
                android:maxLength="45"
                android:textColor="@color/text_gary_04" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gary" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="活动人数"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_17" />

            <EditText
                android:id="@+id/addParty_peopleInput"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_stype_lucency"
                android:inputType="number"
                android:maxLength="45" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/text_white"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gary" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="活动图片"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_17" />

            <ImageView
                android:id="@+id/addParty_addPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/add_damaged_icon"
                android:scaleType="center" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gary" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="活动介绍"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_17" />

            <EditText
                android:id="@+id/addParty_descriptInput"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_stype_lucency"
                android:textColor="@color/text_gary_04" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gary" />

    </LinearLayout>

</LinearLayout>